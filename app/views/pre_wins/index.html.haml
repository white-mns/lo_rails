- @page_title = "模擬戦勝数一覧"
%h1= @page_title

.card.desc
  .card-header
    - act_icon(true)
    検索仕様
    - act_desc(true)
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td.indent
        %td= f.label :result_no_form, '更新回'
        %td.formNum{colspan: "3"}= text_field_tag :result_no_form, @result_no_form
      %tr
        %td.indent
        %td= f.label :e_no_form, 'Eno'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td.indent
        %td= f.label :p_name_form, 'キャラクター名'
        %td.formText= text_field_tag :p_name_form, @p_name_form
      %tr
        %td.indent
        %td= f.label :win_form, '勝利'
        %td.formNum= text_field_tag :win_form, @win_form
      %tr
        %td.indent
        %td= f.label :draw_form, '引き分け'
        %td.formNum= text_field_tag :draw_form, @draw_form
      %tr
        %td.indent
        %td= f.label :lose_form, '敗北'
        %td.formNum= text_field_tag :lose_form, @lose_form
      %tr
        %td.indent
        %td= f.label :all_form, '試合数'
        %td.formNum= text_field_tag :all_form, @all_form
      %tr
        %td.indent
        %td.indent= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


= paginate(@pre_wins)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th= sort_link(@search, :win, '勝', default_order: :desc)
      %th= sort_link(@search, :draw, '引', default_order: :desc)
      %th= sort_link(@search, :lose, '負', default_order: :desc)
      %th= sort_link(@search, :all, '試合', default_order: :desc)
      %th{colspan: "2"} 結果リンク
  %tbody
    - @pre_wins.each do |pre_win|
      %tr
        %td= pre_win.result_no
        %td= p_name_text(pre_win.e_no, pre_win.p_name)
        %td= pre_win.win
        %td= pre_win.draw
        %td= pre_win.lose
        %td= pre_win.all
        %td= character_link(pre_win.e_no)
        %td= character_old_link(@last_result, pre_win.e_no, pre_win.result_no)
= paginate(@pre_wins)
