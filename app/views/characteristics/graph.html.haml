- @page_title = "特性グラフ"
%h1= @page_title

.bs-component
  %ul.breadcrumb{style: "margin-bottom: 5px;"}
    %li.breadcrumb-item= link_to "特性一覧", characteristics_path
    %li.breadcrumb-item.active 特性グラフ

.card.desc
  .card-header
    - act_icon(true)
    検索仕様
    - act_desc(true)
  .card-body
    = render "layouts/base_desc"
    %p
      %span.example_select.example_toggle.pointer
        - help_icon
        入力例
        - act_desc(false)
    #example.closed
      = render "layouts/input_desc"
= search_form_for @search, url: characteristic_graph_path do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td.indent
        %td= f.label :result_no_form, '更新回'
        %td.formNum= text_field_tag :result_no_form, @result_no_form
      %tr
        %td.indent
        %td= f.label :e_no_form, 'Eno'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td.indent
        %td= f.label :p_name_form, 'キャラクター名'
        %td.formText= text_field_tag :p_name_form, @p_name_form
      %tr
        %td.indent
        %td= f.label :str_form, '腕力'
        %td.formNum= text_field_tag :str_form, @str_form
      %tr
        %td.indent
        %td= f.label :vit_form, '体力'
        %td.formNum= text_field_tag :vit_form, @vit_form
      %tr
        %td.indent
        %td= f.label :int_form, '理力'
        %td.formNum= text_field_tag :int_form, @int_form
      %tr
        %td.indent
        %td= f.label :mnd_form, '精神'
        %td.formNum= text_field_tag :mnd_form, @mnd_form
      %tr
        %td.indent
        %td= f.label :tec_form, '器用'
        %td.formNum= text_field_tag :tec_form, @tec_form
      %tr
        %td.indent
        %td= f.label :eva_form, '敏捷'
        %td.formNum= text_field_tag :eva_form, @eva_form
      %tr
        %td.indent
        %td.indent= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


%br
%br

%h3 腕力
= column_chart Characteristic.search(params[:q]).result.to_range_graph(:str)

%h3 体力
= column_chart Characteristic.search(params[:q]).result.to_range_graph(:vit)

%h3 理力
= column_chart Characteristic.search(params[:q]).result.to_range_graph(:int)

%h3 精神
= column_chart Characteristic.search(params[:q]).result.to_range_graph(:mnd)

%h3 器用
= column_chart Characteristic.search(params[:q]).result.to_range_graph(:tec)

%h3 敏捷
= column_chart Characteristic.search(params[:q]).result.to_range_graph(:eva)
