- @page_title = "一覧"
%h1= @page_title

%div.well.desc
  = render "layouts/base_desc"
  %p
    %span.example_select.example_toggle.pointer
      - help_icon
      入力例
      - act_desc(false)
  #example.closed
    = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{colspan: "5"}
          - act_icon(true)
          絞り込み検索
          - act_desc(true)
    %tbody
      %tr
      %tr
        %td  
        %td= f.label :result_no_form, '更新回'
        %td.formNum{colspan: "3"}= text_field_tag :result_no_form, @result_no_form
      %tr
        %td  
        %td= f.label :e_no_form, 'Eno'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td  
        %td= f.label :p_name_form, 'キャラクター名'
        %td.formText= text_field_tag :p_name_form, @p_name_form
      %tr
        %td  
        %td= f.label :result_no_form, 'Result no'
        %td.formNum= text_field_tag :result_no_form, @result_no_form
      %tr
        %td  
        %td= f.label :generate_no_form, 'Generate no'
        %td.formNum= text_field_tag :generate_no_form, @generate_no_form
      %tr
        %td  
        %td= f.label :e_no_form, 'E no'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td  
        %td= f.label :mission_id_form, 'Mission'
        %td.formNum= text_field_tag :mission_id_form, @mission_id_form
      %tr
        %td  
        %td= f.label :type_form, 'Type'
        %td.formNum= text_field_tag :type_form, @type_form
      %tr
        %td  
        %td= f.label :status_form, 'Status'
        %td.formNum= text_field_tag :status_form, @status_form
      %tr
        %td  
        %td= f.label :col_form, 'Col'
        %td.formNum= text_field_tag :col_form, @col_form
      %tr
        %td  
        %td= f.label :lv_form, 'Lv'
        %td.formNum= text_field_tag :lv_form, @lv_form
      %tr
        %td  
        %td= hidden_field_tag :is_form, 1
        %td{colspan: "3"}
          - search_submit_button


= paginate(@missions)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th= sort_link(@search, :result_no, 'Result no', default_order: :desc)
      %th= sort_link(@search, :generate_no, 'Generate no', default_order: :desc)
      %th= sort_link(@search, :e_no, 'E no', default_order: :desc)
      %th= sort_link(@search, :mission_id, 'Mission', default_order: :desc)
      %th= sort_link(@search, :type, 'Type', default_order: :desc)
      %th= sort_link(@search, :status, 'Status', default_order: :desc)
      %th= sort_link(@search, :col, 'Col', default_order: :desc)
      %th= sort_link(@search, :lv, 'Lv', default_order: :desc)
      %th{colspan: "2"} 結果リンク
  %tbody
    - @missions.each do |mission|
      %tr
        %td= mission.result_no
        %td= p_name_text(mission.e_no, mission.p_name)
        %td= mission.result_no
        %td= mission.generate_no
        %td= mission.e_no
        %td= mission.mission_id
        %td= mission.type
        %td= mission.status
        %td= mission.col
        %td= mission.lv
        %td= character_link(mission.e_no)
        %td= character_old_link(@last_result, mission.e_no, mission.result_no)
= paginate(@missions)
