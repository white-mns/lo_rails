- @page_title = "名前一覧"
%h1= @page_title

= render "layouts/base_desc"
%p
  %span.example_select.example_toggle.pointer
    入力例
    %span.act_desc（クリックで開きます）
    %span.act_desc.closed（クリックで閉じます）
#example.closed
  = render "layouts/input_desc"
= search_form_for @search do |f|
  %table.search_toggle.table.table-striped.table-bordered.table-hover
    %tbody.pointer
      %tr
        %td{:colspan => "2"}
          絞り込み検索
          %span.act_desc (クリックで閉じます)
          %span.act_desc.closed (クリックで開きます)
    %tbody
      %tr
      %tr
        %td= f.label :result_no_form, '更新回'
        %td.formNum= text_field_tag :result_no_form, @result_no_form
      %tr
        %td= f.label :e_no_form, 'Eno'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td= f.label :name_form, 'キャラクター名'
        %td.formNum= text_field_tag :name_form, @name_form
      %tr
        %td= f.label :player_form, 'プレイヤー名'
        %td.formNum= text_field_tag :player_form, @player_form
      %tr
        %td= hidden_field_tag :is_form, 1
        %td= f.submit '検索する'


= paginate(@names)
%br
ヒット数：#{ @count }件
%br
%br

%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th= sort_link(@search, :player, 'プレイヤー', default_order: :desc)
      %th{:colspan =>"2"}
        結果リンク
  %tbody
    - @names.each do |name|
      %tr
        %td= name.result_no
        %td= name.name.html_safe + "(" + sprintf("%d", name.e_no) + ")"
        %td= name.player
        %td
          = character_link(name.e_no)
        %td
          = character_old_link(@last_result, name.e_no, name.result_no)
= paginate(@names)
