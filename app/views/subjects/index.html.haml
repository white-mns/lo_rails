  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th= sort_link(@search, :slash,      '斬術', default_order: :desc)
      %th= sort_link(@search, :thrust,     '突術', default_order: :desc)
      %th= sort_link(@search, :stroke,     '打術', default_order: :desc)
      %th= sort_link(@search, :shot,       '射撃', default_order: :desc)
      %th= sort_link(@search, :guard,      '護衛', default_order: :desc)
      %th= sort_link(@search, :dance,      '舞踊', default_order: :desc)
      %th= sort_link(@search, :theft,      '盗術', default_order: :desc)
