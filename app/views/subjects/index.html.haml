      %th= sort_link(@search, :illusion,   '幻術', default_order: :desc)
      %th= sort_link(@search, :trick,      '奇術', default_order: :desc)
      %th{colspan:"2"}
        結果リンク
  %tbody
    - @subjects.each do |subject|
      %tr
        %td= subject.result_no
        %td= p_name_text(subject.e_no, subject.p_name)
        %td= subject.slash
        %td= subject.thrust
        %td= subject.stroke
        %td= subject.shot
        %td= subject.guard
        %td= subject.dance
        %td= subject.theft
        %td= subject.cooking
        %td= subject.technology
        %td= subject.movement
        %td= subject.chemistry
        %td= subject.arithmetic
        %td= subject.fire
        %td= subject.theology
        %td= subject.life
        %td= subject.demonology
        %td= subject.geography
        %td= subject.astronomy
        %td= subject.fengshui
        %td= subject.psychology
        %td= subject.music
        %td= subject.curse
        %td= subject.illusion
        %td= subject.trick
        %td
          = character_link(subject.e_no)
        %td
          = character_old_link(@latest_result, subject.e_no, subject.result_no)
= paginate(@subjects)
