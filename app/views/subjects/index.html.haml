      %th= sort_link(@search, :theology,   '神術', default_order: :desc)
      %th= sort_link(@search, :life,       '命術', default_order: :desc)
      %th= sort_link(@search, :demonology, '冥術', default_order: :desc)
      %th= sort_link(@search, :geography,  '地学', default_order: :desc)
