      %tr
        %td  
        %td= f.label :e_no_form, 'E no'
        %td.formNum= text_field_tag :e_no_form, @e_no_form
      %tr
        %td  
        %td= f.label :facility_name_form, 'Facility name'
        %td.formNum= text_field_tag :facility_name_form, @facility_name_form
      %tr
        %td  
        %td= f.label :facility_effect_form, 'Facility effect'
        %td.formNum= text_field_tag :facility_effect_form, @facility_effect_form
      %tr
        %td  
        %td= f.label :facility_lv_form, 'Facility lv'
        %td.formNum= text_field_tag :facility_lv_form, @facility_lv_form
      %tr
        %td  
        %td= f.label :facility_e_no_form, 'Facility e no'
        %td.formNum= text_field_tag :facility_e_no_form, @facility_e_no_form
