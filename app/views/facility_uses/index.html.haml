%table.table.table-striped.table-bordered.table-hover
  %thead
    %tr
      %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
      %th= sort_link(@search, :e_no,'キャラクター(Eno)', default_order: :desc)
      %th= sort_link(@search, :result_no, 'Result no', default_order: :desc)
      %th= sort_link(@search, :generate_no, 'Generate no', default_order: :desc)
      %th= sort_link(@search, :e_no, 'E no', default_order: :desc)
      %th= sort_link(@search, :facility_name, 'Facility name', default_order: :desc)
      %th= sort_link(@search, :facility_effect, 'Facility effect', default_order: :desc)
      %th= sort_link(@search, :facility_lv, 'Facility lv', default_order: :desc)
      %th= sort_link(@search, :facility_e_no, 'Facility e no', default_order: :desc)
      %th= sort_link(@search, :usage, 'Usage', default_order: :desc)
      %th= sort_link(@search, :cost, 'Cost', default_order: :desc)
      %th= sort_link(@search, :success, 'Success', default_order: :desc)
      %th{colspan: "2"} 結果リンク
  %tbody
    - @facility_uses.each do |facility_use|
      %tr
        %td= facility_use.result_no
        %td= p_name_text(facility_use.e_no, facility_use.p_name)
        %td= facility_use.result_no
        %td= facility_use.generate_no
        %td= facility_use.e_no
        %td= facility_use.facility_name
        %td= facility_use.facility_effect
        %td= facility_use.facility_lv
        %td= facility_use.facility_e_no
        %td= facility_use.usage
        %td= facility_use.cost
        %td= facility_use.success
        %td= character_link(facility_use.e_no)
        %td= character_old_link(@last_result, facility_use.e_no, facility_use.result_no)
= paginate(@facility_uses)
