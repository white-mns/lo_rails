              %td.formNum= text_field_tag :guard_form, @guard_form
              %td= f.label :geography_form, '地学'
              %td.formNum= text_field_tag :geography_form, @geography_form
            %tr
              %td= f.label :dance_form, '舞踊'
              %td.formNum= text_field_tag :dance_form, @dance_form
              %td= f.label :astronomy_form, '天文学'
              %td.formNum= text_field_tag :astronomy_form, @astronomy_form
            %tr
              %td= f.label :theft_form, '盗術'
              %td.formNum= text_field_tag :theft_form, @theft_form
              %td= f.label :fengshui_form, '風水学'
              %td.formNum= text_field_tag :fengshui_form, @fengshui_form
            %tr
              %td= f.label :cooking_form, '料理'
              %td.formNum= text_field_tag :cooking_form, @cooking_form
              %td= f.label :psychology_form, '心理学'
              %td.formNum= text_field_tag :psychology_form, @psychology_form
            %tr
              %td= f.label :technology_form, '工芸学'
              %td.formNum= text_field_tag :technology_form, @technology_form
              %td= f.label :music_form, '音楽'
              %td.formNum= text_field_tag :music_form, @music_form
            %tr
              %td= f.label :movement_form, '機動学'
              %td.formNum= text_field_tag :movement_form, @movement_form
              %td= f.label :curse_form, '呪術'
              %td.formNum= text_field_tag :curse_form, @curse_form
            %tr
              %td= f.label :chemistry_form, '化学'
              %td.formNum= text_field_tag :chemistry_form, @chemistry_form
              %td= f.label :illusion_form, '幻術'
              %td.formNum= text_field_tag :illusion_form, @illusion_form
            %tr
              %td= f.label :arithmetic_form, '算術'
              %td.formNum= text_field_tag :arithmetic_form, @arithmetic_form
              %td= f.label :trick_form, '奇術'
              %td.formNum= text_field_tag :trick_form, @trick_form
            %tr
              %td
              %td{:colspan => "3"}
                = check_box_tag :min_0_hidden, @min_0_hidden, @min_0_hidden
                = label_tag :min_0_hidden, '値が全て0の学科は表示しない'
            %tr
              %td
              %td{:colspan => "3"}
                = check_box_tag :min_0_gray, @min_0_gray, @min_0_gray
                = label_tag :min_0_gray, '値が全て0の学科は灰色にする'
            -@subjects.each do |subject, subject_name|
              = hidden_field_tag ("marked_" + subject).to_sym, @marked[subject]
            %tr
              %td
              %td{:colspan => "3"}= f.submit '検索する'

      = paginate(@drop_min_subjects)
      %br
      ヒット数：#{ @count }件
      %br
      %br
      
      %table.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th= sort_link(@search, :result_no,'更新回', default_order: :desc)
            -@subjects.each do |subject, subject_name|
              - if params["min_0_hidden"] && @open[subject] == 0
              - else
                - if params["min_0_gray"] && @open[subject] == 0
                  %th{:style => "background-color: #aaa;"}= sort_link(@search, (subject).to_sym,      subject_name, default_order: :desc)
                - elsif @marked[subject] == "on"
                  %th{:style => "background-color: #faa;"}= sort_link(@search, (subject).to_sym,      subject_name, default_order: :desc)
                - else
                  %th= sort_link(@search, (subject).to_sym,      subject_name, default_order: :desc)
            %th= sort_link(@search, :card_data_name, '効果', default_order: :desc)
            %th= sort_link(@search, :card_data_lv, 'Lv', default_order: :desc)
        %tbody
          - @drop_min_subjects.each do |drop_min_subject|
            %tr
              %td= drop_min_subject.result_no
              -@subjects.each do |subject, subject_name|
                - if params["min_0_hidden"] && @open[subject] == 0
                - else
                  - if params["min_0_gray"] && @open[subject] == 0
                    %td{:style => "background-color: #aaa;"}= drop_min_subject[subject]
                  - elsif @marked[subject] == "on"
                    %td{:style => "background-color: #faa;"}= drop_min_subject[subject]
                  - else
                    %td= drop_min_subject[subject]
              %td
                - gray_text = @min_0_gray ? "&min_0_gray=" + @min_0_gray : ""
                - hidden_text = @min_0_hidden ? "&min_0_hidden=" + @min_0_hidden : ""
                = link_to drop_min_subject.card_data.name, drop_subjects_path + "?result_no_form=1~" + sprintf("%d",@last_result) + "&effect_form=\"" + drop_min_subject.card_data.name + "\"&lv_form=" + sprintf("%d", drop_min_subject.card_data.lv) + gray_text + hidden_text
              %td= drop_min_subject.card_data.lv   if drop_min_subject.card_data
      = paginate(@drop_min_subjects)
